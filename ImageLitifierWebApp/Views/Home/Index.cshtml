@using ImageLitifier.WebApp
@{
    ViewData["Title"] = "Image Litifier - Flame GIF Creator";
    var backgroundMusicUrl = Environment.GetEnvironmentVariable(Constants.EnvironmentVariables.BackgroundMusicUrl) 
                             ?? Url.Content("~/audio/background-beat.mp3");
}

<link rel="stylesheet" href="~/css/hip-hop-style.css">

<div class="hip-hop-container">
    <!-- Background music -->
    <audio id="backgroundMusic" loop>
        <source src="@backgroundMusicUrl" type="audio/mpeg">
    </audio>

    <!-- Sound effects -->
    <audio id="buttonSound" preload="auto">
        <source src="~/audio/button-click.mp3" type="audio/mpeg">
    </audio>

    <audio id="successSound" preload="auto">
        <source src="~/audio/success-sound.mp3" type="audio/mpeg">
    </audio>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <h1 class="main-title glow-text">🔥 IMAGE LITIFIER 🔥</h1>
                <p class="subtitle">TRANSFORM YO' PICS INTO FLAME GIFS</p>

                <!-- Upload Form -->
                <div id="uploadSection" class="retro-card">
                    <div class="card-header">
                        <h3 class="card-title">DROP THAT FIRE 📸</h3>
                    </div>
                    <div class="card-body">
                        <form id="uploadForm" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="imageFile" class="form-label retro-label">SELECT YOUR IMAGE</label>
                                <input type="file" class="retro-input" id="imageFile" name="imageFile"
                                       accept="image/*" required>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="retro-btn primary-btn" id="uploadBtn">
                                    <span id="uploadBtnText">🚀 UPLOAD & PROCESS 🚀</span>
                                    <span id="uploadSpinner" class="spinner-border spinner-border-sm ms-2 d-none"></span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Processing Status -->
                <div id="processingSection" class="retro-card processing-card mt-4" style="display: none;">
                    <div class="card-body text-center">
                        <div class="retro-spinner mb-3"></div>
                        <h5 id="statusMessage" class="status-text">COOKING UP THAT FIRE... 🔥</h5>
                        <p class="processing-subtitle">HOLD TIGHT, WE'RE MAKING MAGIC</p>
                        <div class="retro-progress mt-3">
                            <div class="retro-progress-bar"></div>
                        </div>
                    </div>
                </div>

                <div id="resultSection" class="retro-card success-card mt-4" style="display: none;">
                    <div class="card-body text-center">
                        <h5 class="success-title mb-3">🔥 YO' FLAME GIF IS READY! 🔥</h5>
                        <div id="resultContainer" class="mb-3">
                            <!-- Result image will be inserted here -->
                        </div>
                        <button class="retro-btn secondary-btn" onclick="resetForm()">MAKE ANOTHER BANGER</button>
                    </div>
                </div>

                <div id="errorSection" class="retro-card error-card mt-4" style="display: none;">
                    <div class="card-body">
                        <h6 class="error-title">SOMETHING WENT WRONG 😤</h6>
                        <p id="errorMessage" class="error-text"></p>
                        <button class="retro-btn danger-btn" onclick="resetForm()">TRY AGAIN</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Music control button -->
    <button id="musicToggle" class="music-toggle">🎵</button>
</div>

<script src="~/js/hip-hop-effects.js"></script>
